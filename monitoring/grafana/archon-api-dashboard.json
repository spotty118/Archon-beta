{
  "dashboard": {
    "id": null,
    "title": "Archon V2 Beta - API Performance Dashboard",
    "tags": ["archon", "api", "performance"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(archon_http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            },
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time P99",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(archon_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99 Response Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "API Request Duration by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(archon_http_request_duration_seconds_bucket[5m])) by (endpoint)",
            "legendFormat": "P50 - {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(archon_http_request_duration_seconds_bucket[5m])) by (endpoint)",
            "legendFormat": "P95 - {{endpoint}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(archon_http_request_duration_seconds_bucket[5m])) by (endpoint)",
            "legendFormat": "P99 - {{endpoint}}",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time",
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_http_requests_total{status_code=~\"5..\"}[5m]) / rate(archon_http_requests_total[5m]) * 100",
            "legendFormat": "5xx Error Rate - {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "rate(archon_http_requests_total{status_code=~\"4..\"}[5m]) / rate(archon_http_requests_total[5m]) * 100",
            "legendFormat": "4xx Error Rate - {{endpoint}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate",
            "unit": "percent"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Active Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "archon_http_requests_active",
            "legendFormat": "Active Requests",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Active Requests",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Database Query Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(archon_db_query_duration_seconds_bucket[5m])) by (operation, table)",
            "legendFormat": "P95 - {{operation}} {{table}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Query Duration",
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "archon_cache_hit_ratio",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.7},
                {"color": "green", "value": 0.9}
              ]
            },
            "unit": "percentunit"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 8,
        "title": "System Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "archon_cpu_usage_percent",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "archon_memory_usage_percent",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          },
          {
            "expr": "archon_disk_usage_percent",
            "legendFormat": "Disk Usage %",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Usage %",
            "unit": "percent",
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "30s"
  }
}