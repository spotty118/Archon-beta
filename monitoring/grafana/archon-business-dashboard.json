{
  "dashboard": {
    "id": null,
    "title": "Archon V2 Beta - Business Metrics Dashboard",
    "tags": ["archon", "business", "knowledge", "projects"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Total Knowledge Items",
        "type": "stat",
        "targets": [
          {
            "expr": "archon_knowledge_items_total",
            "legendFormat": "{{type}} - {{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Projects",
        "type": "stat",
        "targets": [
          {
            "expr": "archon_projects_total{status=\"active\"}",
            "legendFormat": "Active Projects",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "Task Status Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "archon_tasks_total",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "Document Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_documents_processed_total[5m])",
            "legendFormat": "{{type}} - {{status}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Documents/sec",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Embedding Generation Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(archon_embedding_generation_duration_seconds_bucket[5m])) by (model)",
            "legendFormat": "P95 - {{model}}",
            "refId": "A"
          },
          {
            "expr": "rate(archon_embeddings_generated_total[5m]) by (model)",
            "legendFormat": "Rate - {{model}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (s) / Rate",
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "MCP Tool Execution Stats",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_mcp_tool_executions_total[5m]) by (tool_name)",
            "legendFormat": "{{tool_name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Executions/sec",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "External API Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(archon_external_api_duration_seconds_bucket[5m])) by (service)",
            "legendFormat": "P95 - {{service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time",
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Knowledge Base Growth",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(archon_knowledge_items_total[1d])",
            "legendFormat": "Daily Growth - {{type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Items Added",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "Project Completion Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_tasks_total{status=\"done\"}[1d])",
            "legendFormat": "Completed Tasks/day",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Tasks Completed",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "5m"
  }
}