{
  "dashboard": {
    "id": null,
    "title": "Archon V2 Beta - Error Analysis Dashboard",
    "tags": ["archon", "errors", "monitoring", "alerts"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Overall Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(archon_errors_total[5m]) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Critical Errors (Last Hour)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(archon_errors_total{severity=\"critical\"}[1h])",
            "legendFormat": "Critical Errors",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Service Availability",
        "type": "stat",
        "targets": [
          {
            "expr": "archon_service_availability_percent",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "SLA Compliance",
        "type": "stat",
        "targets": [
          {
            "expr": "archon_sla_compliance_percent",
            "legendFormat": "{{sla_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99.9}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Error Rate by Type and Severity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_errors_total[5m]) by (type, severity)",
            "legendFormat": "{{severity}} - {{type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Error Rate by Component",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_errors_total[5m]) by (component)",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "HTTP 5xx Errors by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_http_requests_total{status_code=~\"5..\"}[5m]) by (endpoint)",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "5xx Errors/sec",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Database Connection Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_db_queries_total{status=\"error\"}[5m]) by (operation, table)",
            "legendFormat": "{{operation}} - {{table}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "DB Errors/sec",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "External Service Failures",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archon_external_api_requests_total{status_code=~\"[45]..\"}[5m]) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "API Failures/sec",
            "unit": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 10,
        "title": "Circuit Breaker States",
        "type": "stat",
        "targets": [
          {
            "expr": "archon_circuit_breaker_state",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "value"
            },
            "mappings": [
              {"options": {"0": {"text": "Closed", "color": "green"}}, "type": "value"},
              {"options": {"1": {"text": "Open", "color": "red"}}, "type": "value"},
              {"options": {"2": {"text": "Half-Open", "color": "yellow"}}, "type": "value"}
            ],
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "refresh": "30s"
  }
}