# Data Seeder for Load Testing
FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional seeding dependencies
RUN pip install --no-cache-dir \
    faker \
    lorem

# Copy source code
COPY src/ ./src/
COPY load_testing/data_seeder.py ./data_seeder.py

# Set environment variables
ENV PYTHONPATH=/app

# Default command
CMD ["python", "data_seeder.py"]