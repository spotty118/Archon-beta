# Security Testing Framework Configuration
# Copy this file to .env and customize for your environment

# Target Application URLs
SECURITY_TEST_BASE_URL=http://localhost:8181
SECURITY_TEST_API_URL=http://localhost:8181/api
SECURITY_TEST_FRONTEND_URL=http://localhost:3737

# Authentication Credentials for Testing
SECURITY_TEST_ADMIN_USER=admin
SECURITY_TEST_ADMIN_PASS=admin123
SECURITY_TEST_USER=testuser
SECURITY_TEST_PASS=testpass123

# Test Execution Configuration
SECURITY_TEST_TIMEOUT=30
SECURITY_TEST_CONCURRENCY=5
SECURITY_TEST_DEEP_SCAN=false
SECURITY_TEST_OUTPUT=security_test_results

# Test Category Enablement
SECURITY_TEST_ENABLE_SQL_INJECTION=true
SECURITY_TEST_ENABLE_XSS=true
SECURITY_TEST_ENABLE_CSRF=true
SECURITY_TEST_ENABLE_SSRF=true
SECURITY_TEST_ENABLE_AUTH_TESTING=true
SECURITY_TEST_ENABLE_FILE_UPLOAD=true

# Report Configuration
SECURITY_TEST_REPORT_FORMAT=json
SECURITY_TEST_INCLUDE_RAW_RESPONSES=false
SECURITY_TEST_SEVERITY_THRESHOLD=medium

# Advanced Options
SECURITY_TEST_PROXY_URL=
SECURITY_TEST_USER_AGENT="Archon-Security-Scanner/1.0"
SECURITY_TEST_RATE_LIMIT_DELAY=0.1

# CI/CD Integration
SECURITY_TEST_FAIL_ON_CRITICAL=true
SECURITY_TEST_FAIL_ON_HIGH=false
SECURITY_TEST_BETA_READINESS_MODE=true